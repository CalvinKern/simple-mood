<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <include layout="@layout/notification_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal"
        >

<!--TODO: Take in color tints as parameters so they don't have to be defined on each platform-->
        <ImageView
            android:id="@+id/notification_very_dissatisfied"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_sentiment_very_dissatisfied"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            android:tint="#FFF44336"
            />

        <ImageView
            android:id="@+id/notification_dissatisfied"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_sentiment_dissatisfied"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            android:tint="#FFFF9800"
            />

        <ImageView
            android:id="@+id/notification_plain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_sentiment_plain"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            android:tint="#FFFFEB3B"
            />

        <ImageView
            android:id="@+id/notification_satisfied"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_sentiment_satisfied"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            android:tint="#FF8BC34A"
            />

        <ImageView
            android:id="@+id/notification_very_satisfied"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_sentiment_very_satisfied"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            android:tint="#FF1B5E20"
            />
    </LinearLayout>
</LinearLayout>
